<preference-headers xmlns:android="http://schemas.android.com/apk/res/android" >

   <header
        android:title="@string/user_interface" />

    <!-- Animations -->
    <header
        android:id="@+id/animation_controls"
        android:fragment="com.crom.settings.fragments.AnimationControls"
        android:title="@string/title_animation_controls"
        android:icon="@drawable/ic_crom_animations" />

    <!-- Halo -->
    <header
        android:id="@+id/halo"
        android:fragment="com.crom.settings.fragments.Halo"
        android:title="@string/halo_title"
        android:icon="@drawable/ic_crom_halo" />

    <!-- Interface -->
    <header
        android:id="@+id/interface_settings"
        android:fragment="com.crom.settings.fragments.InterfaceSettings"
        android:title="@string/user_interface"
        android:icon="@drawable/ic_crom_interface" />

    <!-- Lock screen -->
    <header
        android:id="@+id/lock_screen_settings"
        android:fragment="com.crom.settings.fragments.LockscreenInterface"
        android:title="@string/lockscreen_title"
        android:icon="@drawable/ic_crom_lockscreen" />

    <!-- Navigation -->
    <header
        android:id="@+id/nav_bar"
        android:fragment="com.crom.settings.fragments.Navbar"
        android:title="@string/navbar_title"
        android:icon="@drawable/ic_crom_navbar" />

    <!-- Power menu -->
    <header
        android:id="@+id/power_menu"
        android:fragment="com.crom.settings.fragments.PowerMenu"
        android:title="@string/power_menu_title"
        android:icon="@drawable/ic_crom_powermenu"
        android:summary="@string/header_summary" />

    <!-- Power widget -->
    <header
        android:id="@+id/power_widget_settings"
        android:fragment="com.crom.settings.fragments.PowerWidget"
        android:title="@string/power_widget_title"
        android:icon="@drawable/ic_crom_powerwidget"
        android:summary="@string/header_summary" />

    <!-- Ribbon -->
    <header
        android:id="@+id/ribbon_targets"
        android:fragment="com.crom.settings.fragments.RibbonTargets"
        android:title="@string/ribbon_settings_title"
        android:icon="@drawable/ic_crom_ribbon" />

    <!-- Statusbar -->
    <header
        android:id="@+id/status_bar"
        android:fragment="com.crom.settings.fragments.StatusBar"
        android:title="@string/status_bar_title"
        android:icon="@drawable/ic_crom_statusbar" />

    <!-- Statusbar Toggles -->
    <header
        android:id="@+id/statusbar_toggles"
        android:fragment="com.crom.settings.fragments.StatusBarToggles"
        android:title="@string/toggles_title"
        android:icon="@drawable/ic_crom_quicksettings" />

   <header
        android:title="@string/system" />

   <header
        android:id="@+id/device_tools"
        android:title="@string/device_tools_title"
        android:icon="@drawable/ic_crom_device" >
        <intent
            android:action="com.crom.action.LAUNCH_DEVICE_SETTINGS"
            android:targetPackage="com.crom.settings"
            android:targetClass="com.crom.settings.device.DeviceTools" />
   </header>

   <header
   	    android:id="@+id/more_device_settings"
        android:title="@string/more_device_controls_title"
        android:breadCrumbTitle="@string/more_device_settings_title"
        android:fragment="com.crom.settings.fragments.MoreDeviceSettings"
        android:icon="@drawable/ic_crom_device" />

    <header
        android:id="@+id/screen_state_service"
        android:fragment="com.aokp.romcontrol.fragments.ScreenStateToggles"
        android:icon="@drawable/ic_rom_control_screen_state"
        android:title="@string/screen_state_toggles_title" />

</preference-headers>
